import numpy as np
import matplotlib.pyplot as plt

# Valores de x
x = np.linspace(-2, 2, 400)

# Graficar los polinomios y = x^n para n = 1,2,3,4,5
for n in range(1, 6):
    y = x**n
    plt.plot(x, y, label=f"y = x^{n}")

# Personalizar el gráfico
plt.title("Polinomios y = x^n, con n = 1,2,3,4,5")
plt.xlabel("x")
plt.ylabel("y")
plt.legend()
plt.grid(True)
plt.axhline(0, color='black', linewidth=0.8)  # eje x
plt.axvline(0, color='black', linewidth=0.8)  # eje y

# Mostrar gráfico
plt.show()
